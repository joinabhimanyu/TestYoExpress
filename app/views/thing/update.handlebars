<div class="row">
	<div class="col s12">
		<div class="page-header">
			<h1>{{title }}</h1>
		</div>
	</div>


	<div class="row">

		<form class="col s12" method="POST">
			<div class="row">
				<div class="input-field col s6">
					<input type="hidden" value="{{thing._id}}">
					<input placeholder="Enter name" id="name" name="name" type="text" value="{{thing.name}}">
					<!--<label for="name">Name</label>-->
				</div>
			</div>

			<div class="row">
				<div class="input-field col s12">
					<textarea placeholder="Enter info" id="info" name="info" class="materialize-textarea" value="{{thing.info}}"></textarea>
					<!--<label for="info">Info</label>-->
				</div>
			</div>

			<ul class="list-inline">
				<li>
					<a class="waves-effect waves-light btn" href="/things">Cancel</a>
				</li>
				<li>
					<button class="waves-effect waves-light btn" type="submit">Save</button>
				</li>
			</ul>

		</form>
	</div>

</div>

