<div class="row">
	<div class="col s12">
		<div class="page-header">
			<h1>{{title }} <small>{{message}}</small></h1>
		</div>
	</div>

	<div class="col s12">
		<a class="btn-floating btn-large waves-effect waves-light red" href="/things/create">
			<i class="material-icons">add</i>
		</a>

		<table>
			<thead>
				<tr>
					<th data-field="name">Name</th>
					<th data-field="info">Info</th>
					<th></th>
				</tr>
			</thead>

			<tbody>
				{{#each things}}
				<tr data-id="{{_id}}">
					<td>{{name}}</td>
					<td>{{info}}</td>
					<td>
						<a class="btn-floating btn-large red" href="/things/{{_id}}">
							<i class="large material-icons">info_outline</i>
						</a>
					</td>
				</tr>
				{{/each}}
			</tbody>
		</table>
	</div>
</div>