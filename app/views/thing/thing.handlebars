<div class="row">
	<div class="col s12">
		<div class="page-header">
			<h1>{{title }}</h1>
		</div>
	</div>

	<div class="col s12">
		<div class="row">
			<div class="col s12 m6">
				<ul class="list-inline">
					<li>
						<a class="btn-floating btn-large red" href="/things/update/{{thing._id}}">
							<i class="large material-icons">mode_edit</i>
						</a>
					</li>
					<li>
						<a class="btn-floating btn-large red" href="/things/delete/{{thing._id}}">
							<i class="large material-icons">delete</i>
						</a>
					</li>
				</ul>

				<div class="card blue-grey darken-1">
					<div class="card-content white-text">
						<span class="card-title">{{thing.name}}</span>
						<p>{{thing.info}}</p>
					</div>
					<div class="card-action">
						<a href="/things">Back</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>